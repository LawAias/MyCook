<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/toolbar_login"/>
<ScrollView
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="0dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_detail"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:src="@drawable/text"/>

        <TextView
            android:id="@+id/title_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center"
            android:hint="菜谱名"
            android:textStyle="bold"
            android:padding="8dp"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/description_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textSize="16sp"
            android:background="@null"
            android:hint="描述："/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_margin="6dp"
            android:background="#e6e6e6"/>

        <TextView
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textSize="19sp"
            android:background="@null"
            android:text="Made By :"
            android:id="@+id/textView"/>

        <TextView
            android:textAlignment="textEnd"
            android:layout_gravity="end"
            android:id="@+id/author_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:paddingRight="75dp"
            android:textSize="17sp"
            android:background="@null"
            android:hint="作者："/>

        <TextView
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textSize="19sp"
            android:background="@null"
            android:text="材料："/>

        <TextView
            android:id="@+id/material_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@null"
            android:textSize="17sp"
            android:hint="材料："/>
        <!--用料list-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_margin="6dp"
            android:background="#e6e6e6"/>

        <TextView
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textSize="19sp"
            android:background="@null"
            android:text="做法："/>
        <!--step list-->
        <TextView
            android:id="@+id/steps_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="17sp"
            android:background="@null"
            android:hint="步骤："/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_margin="6dp"
            android:background="#e6e6e6"/>
        <TextView
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="@null"
            android:text="谢谢欣赏，如果喜欢可以收藏~"/>
    </LinearLayout>
</ScrollView>

    <!--底层菜单-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:gravity="center">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:checked="false"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/star_nor"
                android:id="@+id/star_detail"
                android:textOff=""
                android:textOn=""
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
        <ImageView
           android:background="@drawable/play_nor"
            android:id="@+id/play_detail"
           android:layout_width="25dp"
           android:layout_height="25dp"
           android:textOff=""
           android:textOn=""/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>